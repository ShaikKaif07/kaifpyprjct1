# Inventory Management System Optimization Code in Python
def optimize_inventory(inventory):
    optimized_inventory = {item: quantity for item, quantity in inventory.items() if quantity > 0}
    return optimized_inventory
# Example Inventory
inventory = {
    'apple': 5,
    'banana': 0,
    'orange': 10,
    'grapes': -2
}
# Optimize Inventory
optimized_inventory = optimize_inventory(inventory)
print(optimized_inventory)
